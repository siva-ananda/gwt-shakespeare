<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:m="urn:import:gwt.material.design.client.ui" xmlns:siva="urn:import:be.steformations.sivananda.client.ui.widget">

	<m:MaterialRow marginTop="20">
		<m:MaterialColumn grid="s6" offset="s3">
			<m:MaterialRow> <!-- inputs -->

				<m:MaterialColumn grid="s4">
					<siva:PlayInput placeholder="Pièce" ui:field="playInput"/>
				</m:MaterialColumn>

				<m:MaterialColumn grid="s4">
					<siva:SpeakerInput label="Personnage"  ui:field="speakerInput"/>
				</m:MaterialColumn>

				<m:MaterialColumn grid="s4">
					<siva:StartInput label="Début"  ui:field="startInput"/>
				</m:MaterialColumn>

			</m:MaterialRow>

			<m:MaterialRow> <!-- buttons -->

				<m:MaterialColumn grid="s2" offset="s4">
					<siva:SearchButton text="Chercher" ui:field="searchButton"/>
				</m:MaterialColumn>

				<m:MaterialColumn grid="s2">
					<siva:ResetButton text="Réinitialiser" />
				</m:MaterialColumn>

			</m:MaterialRow>

			<m:MaterialRow> <!-- output -->

				<m:MaterialColumn grid="s2" offset="s4">
					<siva:Output />
				</m:MaterialColumn>

			</m:MaterialRow>



		</m:MaterialColumn>
	</m:MaterialRow>

</ui:UiBinder> 